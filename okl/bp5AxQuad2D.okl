@kernel void bp5AxQuad2D(const dlong Nelements,
                        @restrict const  dlong  *  elementList,
                        @restrict const  dlong  *  GlobalToLocal,
                        @restrict const  dfloat *  wJ,
                        @restrict const  dfloat *  vgeo,
                        @restrict const  dfloat *  ggeo,
                        @restrict const  dfloat *  gllw,
                        @restrict const  dfloat *  D,
                        @restrict const  dfloat *  S,
                        @restrict const  dfloat *  MM,
                                  const  dfloat    lambda,
                        @restrict const  dfloat *  q,
                              @restrict  dfloat *  Aq){

  for(int eo=0;eo<Nelements;eo+=p_NelementsPerBlk*p_NelementsPerThd;@outer(0)){

    @shared dfloat   s_D[p_Nq][p_Nq];
    @shared dfloat   s_q[p_NelementsPerBlk][p_NelementsPerThd][p_Nq][p_Nq];
    @shared dfloat s_Gqr[p_NelementsPerBlk][p_NelementsPerThd][p_Nq][p_Nq];
    @shared dfloat s_Gqs[p_NelementsPerBlk][p_NelementsPerThd][p_Nq][p_Nq];

    @exclusive dlong element[p_NelementsPerThd];

    for(int es=0;es<p_NelementsPerBlk;++es;@inner(2)){
      for(int j=0;j<p_Nq;++j;@inner(1)){
        for(int i=0;i<p_Nq;++i;@inner(0)){

          //load operators
          if(es==0){
            const int id = j*p_Nq+i;
            const dfloat Dji = D[id];
            s_D[j][i] = Dji;
          }

          for (int ek=0;ek<p_NelementsPerThd;++ek) {
            if(eo+es*p_NelementsPerThd+ek<Nelements) {
              element[ek] = elementList[eo+es*p_NelementsPerThd+ek];
              const dlong id = GlobalToLocal[i + j*p_Nq + element[ek]*p_Np];
              s_q[es][ek][j][i] = (id!=-1) ? q[id] : 0.0;
            }
          }
        }
      }
    }

    for(int es=0;es<p_NelementsPerBlk;++es;@inner(2)){
      for(int j=0;j<p_Nq;++j;@inner(1)){
        for(int i=0;i<p_Nq;++i;@inner(0)){

          dfloat tmp[p_NelementsPerThd];
          for(int s=0;s<p_NelementsPerThd;++s)
            tmp[s] = 0;

          // 'r' terms
          // #pragma unroll p_cubUnr
          for(int m = 0; m < p_Nq; ++m) {
            const dfloat Dim = s_D[i][m];

            // #pragma unroll p_NelementsPerThd
            for(int s=0;s<p_NelementsPerThd;++s){
              tmp[s] += Dim*s_q[es][s][j][m];
            }
          }

          for(int ek=0;ek<p_NelementsPerThd;++ek){
            if(eo+es*p_NelementsPerThd+ek<Nelements){
              const dlong gbase = element[ek]*p_Np + i + j*p_Nq;
              const dfloat G00 = ggeo[p_Nggeo*gbase+p_G00ID];
              const dfloat G01 = ggeo[p_Nggeo*gbase+p_G01ID];

              s_Gqr[es][ek][j][i] = G00*tmp[ek];
              s_Gqs[es][ek][j][i] = G01*tmp[ek];
            }
            tmp[ek] = 0;
          }

          // 's' terms
          // #pragma unroll p_cubUnr
          for(int m = 0; m < p_Nq; ++m) {
            const dfloat Djm = s_D[j][m];

            // #pragma unroll p_NelementsPerThd
            for(int s=0;s<p_NelementsPerThd;++s){
              tmp[s] += Djm*s_q[es][s][m][i];
            }
          }

          // #pragma unroll p_NelementsPerThd
          for(int ek=0;ek<p_NelementsPerThd;++ek){
            if(eo+es*p_NelementsPerThd+ek<Nelements){
              const dlong gbase = element[ek]*p_Np + i + j*p_Nq;
              const dfloat G01 = ggeo[p_Nggeo*gbase+p_G01ID];
              const dfloat G11 = ggeo[p_Nggeo*gbase+p_G11ID];

              s_Gqr[es][ek][j][i] += G01*tmp[ek];
              s_Gqs[es][ek][j][i] += G11*tmp[ek];
            }
          }
        }
      }
    }

    for(int es=0;es<p_NelementsPerBlk;++es;@inner(2)){
      for(int j=0;j<p_Nq;++j;@inner(1)){
        for(int i=0;i<p_Nq;++i;@inner(0)){

          dfloat tmpAp[p_NelementsPerThd];
          // #pragma unroll p_NelementsPerThd
          for(int ek=0;ek<p_NelementsPerThd;++ek){
            tmpAp[ek] = 0;

            if(eo+es*p_NelementsPerThd+ek<Nelements){
              const dlong gbase = element[ek]*p_Np + i + j*p_Nq;
              const dfloat GWJ = wJ[gbase];

              tmpAp[ek] = s_q[es][ek][j][i]*lambda*GWJ;
            }
          }

          // use same matrix for both slices
          // #pragma unroll p_cubUnr
          for(int m=0;m<p_Nq;++m){
            const dfloat Dmi = s_D[m][i];
            const dfloat Dmj = s_D[m][j];

            // #pragma unroll p_NelementsPerThd
            for(int s=0;s<p_NelementsPerThd;++s){
              tmpAp[s] += Dmi*s_Gqr[es][s][j][m];
              tmpAp[s] += Dmj*s_Gqs[es][s][m][i];
            }
          }

          // #pragma unroll p_NelementsPerThd
          for(int ek=0;ek<p_NelementsPerThd;++ek){
            if(eo+es*p_NelementsPerThd+ek<Nelements){
              const dlong base = i + j*p_Nq + element[ek]*p_Np;
              Aq[base] = tmpAp[ek];
            }
          }
        }
      }
    }
  }
}
